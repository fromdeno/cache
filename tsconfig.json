{
  "include": ["src/", "test/"],
  "deno2node": {
    "vendorDir": ".deno2node/vendor/", // for std/testing/assert.ts used in test/
    "shim": "src/shim.node.ts"
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "out/",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  }
}
